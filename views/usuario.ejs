        <a href="/nuevoUsuario" class="btn btn-primary" id="submit-btn">Añadir un nuevo Usuario</a>
        <a href="UsuarioDes" class="btn btn-primary" id="submit-btn">Usuarios deshabilitados</a>
        <br><br>
        <table id="table" class="table table-striped text-start mt-4">
            <thead style="background-color:#00b388; color: black;">
                <tr>
                    <th scope="col">Numero</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Tipo de usuario</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-start">
                <% results.forEach((tipo)=>{ %>

                    <tr>
                        <td>
                            <%= tipo.id %>
                        </td>
                        <td>
                            <%= tipo.nombre %>
                        </td>
                        <td>
                            <%= tipo.apellido %>
                        </td>
                        <td>
                            <%= tipo.correo %>
                        </td>
                        <td>
                            <%= tipo.tipoNombre %>
                        </td>
                        <td>
                            <a href="/editarUsuario/<%= tipo.id %>" class="btn btn-info"><span class="material-symbols-outlined">
                              border_color
                              </span></a>
                              <a onclick="confirmar(<%= tipo.id %>, '<%= tipo.nombre %>')" class="btn btn-danger"><span class="material-symbols-outlined">delete</span></a>
                        </td>

                    </tr>
              <% }) %>
            </tbody>

        </table>
    </div>
