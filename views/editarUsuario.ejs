<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../sass/font.css">

    <!--FONTS-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <title>Categorias</title>
</head>

<body>

  <nav class="navbar navbar-light navbar-expand-lg" style="background-color: #00b388;">
    <div class="container-fluid">
      <div>
        <span class="navbar-brand mb-0 h1">Porduct Rescue</span>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/usuarios">USUARIOS</a>
          </li>
          <li class="nav-item ">
            <a class="nav-link active" href="/categoria">CATEGORIAS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/tipoUsuario">TIPO DE USUARIOS</a>
          </li>
        </ul>
      </div>
    </div>
    <div>

      <a class="navbar-brand" href="/login">
        CERRAR SESIÓN
      </a>
    </div>
  </nav>
  
    
    <% if(results){ %>
        <div class="container mt-4">
            <div class="card border-secondary">
                <div class="card-header" id="titlecard">Ingresar nueva categoria</div>
                <div class="card-body">
                    <form action="/editarUsuario" method="POST">
                        <input id="id" name="id" value="<%= results.id %>" hidden>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= results.nombre %>" tabindex='1'>
                        </div>
                        <div class="mb-3">
                            <label for="apellido" class="form-label">Apellido</label>
                            <input type="text" class="form-control" id="apellido" name="apellido" value="<%= results.apellido %>" tabindex='2'>
                        </div>
                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo Electronico</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= results.correo %>" tabindex='3'>
                        </div>
                        <div class="mb-3">
                            <label for="contraseña" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="pass" name="pass" value="<%= results.pass %>"  tabindex='4'>
                        </div>

                        <label for="exampleFormControlInput1" class="form-label">Tipo de Usuario</label>
                        <select class="form-select form-control-lg" aria-label="Default select example" id="tipo" name="tipo" required>
                            
                            <option selected> Seleccione una opción: </option>
                            <% tipox.forEach((tipos)=>{ %>
                                
                                <option  <%= results.tipoUsuario_id_fk == tipos.id ? "selected" : "" %> value="<%= tipos.id %>" > <%= tipos.nombre %> </option>

                            <%})%>
                        </select>
                        <BR></BR>
                        <button type="submit" class="btn btn-info" tabindex="5">Guardar Usuario</button>
                        <a href="/usuario" class="btn btn-info" >Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>
    <% if(typeof alert != "undefined"){ %>
        <script>
            Swal.fire({
                title: '<%= alertTitle%>',
                text: '<%= alertMessage%>',
                icon: '<%= alertIcon%>',
                showConfirmButton: <%= showConfirmButton%> ,
                timer: <%= timer%>
            }).then(()=>{
                window.location='/<%= ruta%>'
            })
        </script>
    <% } %>


</body>

</html>